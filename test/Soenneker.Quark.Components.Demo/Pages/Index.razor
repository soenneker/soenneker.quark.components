@page "/"
@using Soenneker.Quark.Components.Demo.Components
@using Soenneker.Quark.Components.Margins
@using Soenneker.Quark.Components.Heights

<PageTitle>Quark Components Demo</PageTitle>

<img src="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" />
<h1>Soenneker.Quark.Components Demo</h1>
<p>This page demonstrates the Quark Components library using a custom DemoDiv component.</p>

<DemoDiv Id="demo-div" Class="demo-class" Style="background-color: #e3f2fd; padding: 20px; border-radius: 8px; margin: 20px 0;">
    <h2>DemoDiv Component</h2>
</DemoDiv>

<DemoDiv OnClick="@HandleClick" Style="background-color: #e1f5fe; padding: 15px; border-radius: 8px; cursor: pointer; text-align: center; border: 2px solid #0277bd;">
    <strong>Click me!</strong>
    <p>Click count: @_clickCount</p>
</DemoDiv>

<DemoDiv OnMouseOver="@HandleMouseOver" OnMouseOut="@HandleMouseOut" 
         Style="@($"background-color: {_mouseOverColor}; padding: 15px; border-radius: 8px; cursor: pointer; text-align: center; border: 2px solid #7b1fa2; transition: background-color 0.3s;")">
    <strong>Hover over me!</strong>
    <p>Mouse over count: @_mouseOverCount</p>
</DemoDiv>

<DemoDiv TabIndex="0" OnFocus="@HandleFocus" OnBlur="@HandleBlur" 
         Style="@($"background-color: {_focusColor}; padding: 15px; border-radius: 8px; text-align: center; border: 2px solid #388e3c; outline: none;")">
    <strong>Focus me! (Tab to focus)</strong>
    <p>Focus count: @_focusCount</p>
</DemoDiv>

<DemoDiv Margin="Margin.S1">Margin</DemoDiv>

<h2>Height and Width Examples</h2>

<DemoDiv Height="200" Style="background-color: #fff3e0; padding: 10px; border: 2px solid #ff9800;">
    <strong>Height with integer (200px)</strong>
    <p>This div has Height=200 (converts to 200px)</p>
</DemoDiv>

<DemoDiv Width="300" Style="background-color: #f3e5f5; padding: 10px; border: 2px solid #9c27b0;">
    <strong>Width with integer (300px)</strong>
    <p>This div has Width=300 (converts to 300px)</p>
</DemoDiv>

<DemoDiv Height="150" Width="400" Style="background-color: #e8f5e8; padding: 10px; border: 2px solid #4caf50;">
    <strong>Both Height and Width with integers</strong>
    <p>Height=150 (150px), Width=400 (400px)</p>
</DemoDiv>

<DemoDiv Height="@("250")" Style="background-color: #fce4ec; padding: 10px; border: 2px solid #e91e63;">
    <strong>Height with string</strong>
    <p>This div has Height="@("250")" (still works)</p>
</DemoDiv>

<DemoDiv Height="Height.P50" Style="background-color: #e0f2f1; padding: 10px; border: 2px solid #009688;">
    <strong>Height with builder (50%)</strong>
    <p>This div has Height="Height.P50" (50% height)</p>
</DemoDiv>

@code {
    private int _clickCount = 0;
    private int _mouseOverCount = 0;
    private int _focusCount = 0;
    private string _mouseOverColor = "#e1f5fe";
    private string _focusColor = "#e8f5e8";

    private async Task HandleClick(MouseEventArgs args)
    {
        _clickCount++;
        await Task.CompletedTask;
    }

    private async Task HandleMouseOver(MouseEventArgs args)
    {
        _mouseOverCount++;
        _mouseOverColor = "#ffecb3";
        await Task.CompletedTask;
    }

    private async Task HandleMouseOut(MouseEventArgs args)
    {
        _mouseOverColor = "#e1f5fe";
        await Task.CompletedTask;
    }

    private async Task HandleFocus(FocusEventArgs args)
    {
        _focusCount++;
        _focusColor = "#c8e6c9";
        await Task.CompletedTask;
    }

    private async Task HandleBlur(FocusEventArgs args)
    {
        _focusColor = "#e8f5e8";
        await Task.CompletedTask;
    }
}
